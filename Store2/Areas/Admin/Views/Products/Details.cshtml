﻿@model Store2.Domain.Product

@{
    ViewBag.Title = "Details";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Главная</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")">Продукты</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="container mt-4">
    <div class="card">
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" class="card-img" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">@Model.Name</h2>
                    <p class="card-text"><strong>Price:</strong> @Model.Price.ToString("C")</p>
                    <p class="card-text"><strong>Description:</strong> @Model.Description</p>
                    <p class="card-text"><strong>Brand:</strong> @Model.Brand</p>
                    <p class="card-text"><strong>Availability:</strong> @(Model.IsAvailable ? "In Stock" : "Out of Stock")</p>
                </div>
            </div>
        </div>
    </div>
    <div class="text-right mt-3">
        @Html.ActionLink("Назад", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}