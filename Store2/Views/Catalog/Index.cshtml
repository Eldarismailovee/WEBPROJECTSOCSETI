@model IEnumerable<Store2.Domain.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Все продукты</h2>

<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="col-md-2">
                <div class="card mb-4 shadow-sm" style="height: 350px;">
                    <a href="@Url.Action("Details", "Catalog", new { id = item.Id })" class="stretched-link">
                        <!-- Добавлена ссылка на детали продукта -->
                        <img src="@Url.Content(item.ImageUrl)" class="card-img-top" alt="@item.Name" style="height: 200px;">
                    </a>
                    <div class="card-body d-flex flex-column">
                        <p class="card-text">@item.Name</p>
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">В корзину</button>
                                </div>
                                <small class="text-muted">@item.Price MDL</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
