@model Store2.Domain.Product

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Главная</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Products")">Продукты</a></li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
    </ol>
</nav>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-8">
            <h2 class="font-weight-bold">@Model.Name</h2>
            <div class="d-flex align-items-center">
                <span class="text-muted">Id продукта: @Model.Id</span>
            </div>
            <div class="my-3">
                <span class="h4 text-danger font-weight-bold">@Model.Price.ToString("C")</span>
            </div>
            <div class="input-group mb-3" style="width: 120px;">
                <div class="input-group-prepend">
                    <button class="btn btn-outline-secondary" type="button" onclick="changeQuantity(-1)">-</button>
                </div>
                <input type="text" class="form-control text-center" id="quantityInput" value="1" data-max="@Model.Quantity">
                <div class="input-group-append">
                    <button class="btn btn-outline-secondary" type="button" onclick="changeQuantity(1)">+</button>
                </div>
            </div>
            <button class="btn btn-success btn-lg btn-block mb-3" onclick="addToCart(@Model.Id)">Добавить в корзину</button>
            <button class="btn btn-outline-secondary btn-lg btn-block mb-3" onclick="addToFavorites(@Model.Id)">
                <i class="fa fa-heart"></i> Добавить в список избранного
            </button>
        </div>
    </div>
    <div class="mt-4">
        <h4>Описание</h4>
        <p>@Model.Description</p>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script>
        function changeQuantity(delta) {
            var input = document.getElementById('quantityInput');
            var currentValue = parseInt(input.value);
            var maxQuantity = parseInt(input.getAttribute('data-max'));
            var newValue = currentValue + delta;
            if (newValue > 0 && newValue <= maxQuantity) {
                input.value = newValue;
            } else if (newValue > maxQuantity) {
                input.value = maxQuantity;
                toastr.warning('Максимальное доступное количество товара: ' + maxQuantity);
            }
        }

        function addToCart(productId) {
            var quantity = parseInt(document.getElementById('quantityInput').value);
            $.ajax({
                url: '@Url.Action("AddToCart", "ShoppingCarts")',
                type: 'POST',
                data: {
                    id: productId,
                    quantity: quantity
                },
                success: function(result) {
                    if (result.success) {
                        toastr.success('Товар добавлен в корзину');
                    } else {
                        toastr.error('Произошла ошибка при добавлении товара в корзину');
                    }
                },
                error: function() {
                    toastr.error('Произошла ошибка при добавлении товара в корзину');
                }
            });
        }

        function addToFavorites(productId) {
            $.ajax({
                url: '@Url.Action("Add", "Favorites")',
                type: 'POST',
                data: {
                    productId: productId
                },
                success: function(result) {
                    if (result.success) {
                        toastr.success(result.message);
                    } else {
                        toastr.error(result.message);
                    }
                },
                error: function() {
                    toastr.error('Произошла ошибка при добавлении товара в список избранного');
                }
            });
        }

        $(document).ready(function() {
            var quantityInput = $('#quantityInput');
            quantityInput.on('input', function() {
                var maxQuantity = parseInt($(this).data('max'));
                var value = $(this).val();

                // Удаляем все нецифровые символы
                if (!/^\d+$/.test(value)) {
                    value = value.replace(/\D/g, '');
                    $(this).val(value);
                }

                // Проверяем максимальное значение
                if (parseInt(value) > maxQuantity) {
                    $(this).val(maxQuantity);
                    toastr.warning('Максимальное доступное количество товара: ' + maxQuantity);
                }
            });
        });
    </script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}
