@model IEnumerable<Store2.Domain.BlogList>

@{
    ViewBag.Title = "Index";
}

<h2>Завтрак</h2>

<p>
    @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
</p>

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <img src="@Url.Content(item.ImageUrl)" class="card-img-top" alt="@item.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text">@item.Content</p>
                        <p class="card-text"><small class="text-muted">@item.Date.ToString("dd MMM yyyy")</small></p>
                        <p class="card-text"><small class="text-muted">Время приготовления: @item.PreparationTime.ToString(@"hh\:mm")</small></p>
                        <p class="card-text"><small class="text-muted">Сложность: @item.Difficulty</small></p>
                        <p class="card-text"><small class="text-muted">Категория: @item.Category</small></p>
                        <div class="mt-auto">
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-secondary" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
