@model Store2.Domain.Product

@{
    ViewBag.Title = Model.Name;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.ImageUrl" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <p class="h4">@Model.Price.ToString("C")</p>
            <form action="@Url.Action("Add", "Favorites")" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary">Добавить в избранное</button>
            </form>
        </div>
    </div>
</div>
