@model Store2.Domain.HomeViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="container mt-4">
    <div class="row align-items-start">
        <!-- Секция свойств -->
        <div class="col-md-4">
            @foreach (var property in Model.PropertyStoreModels.Take(10))
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@property.Name</h5>
                        <p class="card-text">@property.value</p>
                        <img src="@property.imageUrl" alt="Property Image" class="img-fluid">
                    </div>
                </div>
            }
        </div>

        <!-- Секция слайдов -->
        <div class="col-md-8">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    @for (int i = 0; i < Model.Slides.Count(); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
                    }
                </ol>
                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    @foreach (var slide in Model.Slides.Select((value, index) => new { value, index }))
                    {
                        <div class="carousel-item @(slide.index == 0 ? "active" : "")">
                            <img class="d-block w-100" src="@slide.value.Image" alt="@slide.value.Name">
                        </div>
                    }
                </div>
                <!-- Controls -->
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

    <h2 class="mb-3">Продукты</h2>
    <div class="row">
        @foreach (var product in Model.Products)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-3">
                <div class="card h-100">
                    <!-- Оберните изображение в ссылку, которая ведет на страницу описания продукта -->
                    <a href="@Url.Action("Details", "Catalog", new { id = product.Id })">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    </a>
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <!-- Кнопка для добавления продукта в корзину -->
                        <button class="btn btn-success">Добавить в корзину</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.bundle.min.js"></script>
}
