@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Home Page";
}

@model WebApplication1.Models.UserData
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <section class="bg-home bg-primary" id="home">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-6">
                    <div class="home-content text-center mb-4">
                        Welcome, @HttpContext.Current.User.Identity.Name
                        <h1 class="home-title mb-4 text-white">Магазин N2</h1>
                        <p class="text-white-50 home-desc mb-4">Лучшее качество и низкие Цены.</p>
                        <div>
                            <a href="#" class="btn btn-light mr-1">Связаться с нами</a>
                            <a href="#" class="btn btn-purple">Совершить заказ</a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="home-img">
                        <img src="images/home-img.png" alt="" class="img-fluid mx-auto d-block">
                    </div>
                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container-fluid -->
    </section>
    <section class="section" id="services">
        <div class="container-fluid">
            <div class="row justify-content-center">
                <div class="col-lg-7">
                    <div class="title text-center my-4">
                        <h3 class="mb-3">Наши продукты</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                @using (Html.BeginForm("Product", "Home", FormMethod.Post, new { autocomplete = "off" }))
                {
                    foreach (var product in Model.Products)
                    {
                        <div class="col-md-4">
                            <div class="product-item">
                                <p>@product</p>
                                <div>
                                    <button class="btn btn-primary btn-xs float-right" name="btn" type="submit" value="@product">View</button>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </section>
</body>
</html>
